<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.angcyo.sample"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.angcyo.sample.PullLayoutActivity"
            android:label="PullLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.angcyo.sample.PullRefreshLayoutActivity"
            android:label="PullRefreshLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.angcyo.sample.NextScrollViewActivity"
            android:label="NextScrollViewActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
            android:name="com.angcyo.demo.qq.QqLayoutDemo"
            android:configChanges="screenSize|keyboard|screenLayout|orientation"
            android:label="QqLayoutDemo"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
            android:name="com.angcyo.demo.dialview.DialDemoActivity"
            android:label="RJcenter-DialDemo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.angcyo.demo.qq.QqActivity"
            android:label="RJcenter-QQ"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="RJcenter-Main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.angcyo.demo.top.OnePxActivity"
            android:theme="@style/Dialog" />
    </application>

</manifest>
