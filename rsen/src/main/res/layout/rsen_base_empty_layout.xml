<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_empty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--love path 动画-->
        <com.rsen.view.LovePathProgress
            style="@style/LovePathProgressStyleBase"
            android:layout_marginBottom="10dp" />

        <!--提示-->
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/base_empty_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="没有能展示的数据啦"
            android:textColor="?attr/colorAccent" />

        <!--刷新按钮-->
        <com.rsen.view.PathButton
            android:id="@+id/base_empty_refresh"
            style="@style/PathButtonStyleBase"
            android:text="刷新试试" />
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
